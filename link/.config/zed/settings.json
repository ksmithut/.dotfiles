// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "debugger": {
    "dock": "right"
  },
  "theme": {
    "mode": "system",
    "dark": "One Dark",
    "light": "One Light Custom"
  },
  "terminal": {
    "max_scroll_history_lines": 100000,
    "line_height": {
      "custom": 1.22
    },
    "font_family": "Hack Nerd Font"
  },
  "tab_size": 2,
  "buffer_font_family": "Hack Nerd Font",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "wrap_guides": [80],
  "format_on_save": "on",
  "languages": {
    "Elixir": {
      "wrap_guides": [100]
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "Python": {
      "tab_size": 4
    },
    "Caddyfile": {
      "format_on_save": "on",
      "hard_tabs": true,
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "caddy",
          "arguments": ["fmt", "-"]
        }
      }
    }
  },
  "file_types": {
    "HTML": ["svg"],
    "Dockerfile": ["Dockerfile*"],
    "Caddyfile": ["Caddyfile*", "*.caddyfile"]
  },
  "icon_theme": {
    "mode": "system",
    "light": "VSCode Icons (Light)",
    "dark": "VSCode Icons (Dark)"
  },
  "auto_install_extension": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "git_firefly": true,
    "sql": true,
    "elixir": true,
    "graphql": true,
    "vscode-icons": true,
    "pug": true,
    "make": true,
    "po": true,
    "caddyfile": true
  },
  "restore_on_startup": "none",
  "private_files": ["**/.env*"],
  "bottom_dock_layout": "full",
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "enabled": false,
    "version": "2"
  }
}
