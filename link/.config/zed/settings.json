// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "One Dark",
  "terminal": {
    "line_height": {
      "custom": 1.17
    },
    "font_family": "Cascadia Code PL"
  },
  "tab_size": 2,
  "buffer_font_family": "Cascadia Code PL",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "wrap_guides": [80],
  "format_on_save": "on",
  "languages": {
    "Elixir": {
      "wrap_guides": [100]
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "Python": {
      "tab_size": 4
    }
  },
  "file_types": {
    "HTML": ["svg"]
  },
  "auto_install_extension": {
    "html": true,
    "toml": true,
    "sql": true,
    "elixir": true,
    "dockerfile": true,
    "git_firefly": true
  },
  "restore_on_startup": "none"
}
