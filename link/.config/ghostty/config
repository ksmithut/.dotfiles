# https://ghostty.org/docs/config/reference
# reload - cmd+shift+,

# ghostty +list-fonts
font-family = "Hack Nerd Font"
font-size = 15

# transparent, native, tabs, hidden
macos-titlebar-style = tabs

# official, blueprint, chalkboard, microchip, glass, holographic, paper, retro, xray, custom-style
macos-icon = custom-style
# aluminum, beige, plastic, chrome
macos-icon-frame = plastic
macos-icon-ghost-color = #FFFFFF
macos-icon-screen-color = #000000

# background-opacity = 0.7
# background-blur = true

# ghostty +list-themes
theme=light:OneHalfLightCustom,dark:One Half Dark

confirm-close-surface = false
shell-integration-features = no-cursor
cursor-style = block

# quick terminal
keybind = global:alt+space=toggle_quick_terminal
quick-terminal-screen = mouse
quick-terminal-position = bottom
quick-terminal-animation-duration = 0

keybind = performable:super+shift+backslash=new_split:right
keybind = shift+enter=text:\x1b\r
