{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "*.js", "*.cjs", "*.json"],
  "exclude": []
}
