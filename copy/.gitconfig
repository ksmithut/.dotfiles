[alias]
	s = status -s
	diff = diff --word-diff
	pr = pull --rebase
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	filelog = log -u
	la = "!git config -l | grep alias | cut -c 7-"
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
[core]
	excludesfile = ~/.gitignore
[push]
	default = simple
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	# Detect copies as well as renames
	renames = copies
[commit]
	gpgsign = true
[gpg]
	program = gpg2
